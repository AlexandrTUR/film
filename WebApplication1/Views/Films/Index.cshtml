@model IEnumerable<WebApplication1.Models.Films.Film>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
        @Html.ActionLink("To Genres", "Index", "Genres")
        @Html.ActionLink("To Actors", "Index", "Persons")
        @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th> Genres</th>
        <th> Actors and others</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @if (item.genres != null)
            {
                foreach (var genre in item.genres)
                {
                    @genre.name <br />
                }
            }
        </td>
        <td>
            @if (item.persons != null)
            {
                foreach (var p in item.persons)
                {
                    @p.name <br />
                }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
